<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="server.mapper.StudentMapper">
    
    <select id="getStudentList" resultType="server.sql.Student" statementType="STATEMENT">
        select * from ${table}
    </select>

    <update id="resetStatus" statementType="STATEMENT">
        update ${table} set status = "Absent"
    </update>
    
    <select id="getStudentById" parameterType="int" resultType="server.sql.Student" statementType="STATEMENT">
        select * from ${table} where studentId = ${studentId}
    </select>

    <update id="changeStudentStatus" parameterType="server.sql.Student" statementType="STATEMENT">
        update ${table} set status=${status} where studentId = ${studentId}
    </update>

    <update id="changeStudentPassword" parameterType="server.sql.Student" statementType="STATEMENT">
        update ${table} set password=${password} where studentId = ${studentId}
    </update>

</mapper>